	<!-- Center Main Gear -->
	<animation>
		<type>translate</type>
		<object-name>central.strut.low</object-name>
		<object-name>tyres.central</object-name>
		<object-name>central.scissor.down</object-name>
		<property>gear/gear[3]/compression-norm</property>
		<factor>-0.3</factor>
		<axis>
			<x>-0.32787</x>
			<y> 0.00000</y>
			<z>-1.29466</z>
		</axis>
	</animation>
	
	<animation>
		<type>rotate</type>
		<object-name>central.scissor.down</object-name>
		<property>gear/gear[3]/compression-norm</property>
		<interpolation>
			<entry><ind>0.0</ind><dep>  0</dep></entry>
			<entry><ind>1.0</ind><dep>-35</dep></entry>
			<entry><ind>1.5</ind><dep>-53</dep></entry>
		</interpolation>
		<center>
			<x-m>4.838</x-m>
			<y-m>0</y-m>
			<z-m>1.639</z-m>
		</center>
		<axis>
			<x>0</x>
			<y>-1</y>
			<z>0</z>
		</axis>
	</animation>
	
	<animation>
		<type>rotate</type>
		<object-name>central.scissor.up</object-name>
		<property>gear/gear[3]/compression-norm</property>
		<interpolation>
			<entry><ind>0.00</ind><dep> 0</dep></entry>
			<entry><ind>0.50</ind><dep>13</dep></entry>
			<entry><ind>1.00</ind><dep>18</dep></entry>
			<entry><ind>1.25</ind><dep>20</dep></entry>
			<entry><ind>1.50</ind><dep>19</dep></entry>
		</interpolation>
		<center>
			<x-m>5.232</x-m>
			<y-m>0</y-m>
			<z-m>2.263</z-m>
		</center>
		<axis>
			<x>0</x>
			<y>-1</y>
			<z>0</z>
		</axis>
	</animation>
	
	<animation>
		<type>rotate</type>
		<object-name>central.strut.up</object-name>
		<object-name>central.strut.low</object-name>
		<object-name>central.scissor.up</object-name>
		<object-name>central.scissor.down</object-name>
		<object-name>tyres.central</object-name>
		<property>gear/gear[3]/position-norm</property>
		<interpolation>
			<entry><ind>0.4</ind><dep>-80</dep></entry>
			<entry><ind>0.8</ind><dep>  0</dep></entry>
