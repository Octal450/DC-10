			<entry><ind>0.15</ind><dep> 0</dep></entry>
			<entry><ind>0.70</ind><dep>50</dep></entry>
		</interpolation>
		<axis>
			<x1-m>3.79831</x1-m>
			<y1-m>0.56268</y1-m>
