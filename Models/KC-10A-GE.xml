	<!-- Tanker stuff -->
	<multiplay>
		<refuel>
			<type>boom</type>
			<type>probe</type>
		</refuel>
	</multiplay>
	
	<animation>
		<name>Boom rotate</name>
		<type>rotate</type>
		<object-name>BoomGroup</object-name>
		<property>engines/engine[7]/n1</property> <!-- Hijack the N1 property of engine 7 to send boom position over MP -->
