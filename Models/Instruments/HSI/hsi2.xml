<PropertyList>
	
	<path>hsi.ac</path>
	
	<animation>
		<type>scale</type>
		<x-offset>0.95</x-offset>
		<y-offset>0.95</y-offset>
		<z-offset>0.95</z-offset>
	</animation>
	
	<animation>
		<type>material</type>
		<object-name>LightingGroup</object-name>
		<emission>
			<red>1.0</red>
			<green>0.6</green>
			<blue>0.3</blue>
			<factor-prop>controls/lighting/fo-panel-norm</factor-prop>
		</emission>
	</animation>
	
	<animation>
		<type>material</type>
		<object-name>Display</object-name>
		<emission>
			<red>1.0</red>
			<green>1.0</green>
			<blue>1.0</blue>
			<factor-prop>controls/lighting/fo-digital-norm</factor-prop>
		</emission>
	</animation>
	
	<animation>
		<type>select</type>
		<object-name>Display</object-name>
		<condition>
			<and>
				<equals>
					<property>instrumentation/hsi[1]/power-avail</property>
					<value>1</value>
				</equals>
				<greater-than>
					<property>controls/lighting/fo-digital-norm</property>
					<value>0.01</value>
				</greater-than>
			</and>
		</condition>
	</animation>
	
	<animation>
		<type>select</type>
		<object-name>GSFlag</object-name>
		<condition>
			<or>
				<not-equals>
					<property>instrumentation/hsi[1]/power-avail</property>
					<value>1</value>
				</not-equals>
				<less-than>
					<property>systems/electrical/outputs/nav[1]</property>
					<value>24</value>
				</less-than>
				<not><property>instrumentation/nav[1]/gs-in-range</property></not>
				<not><property>instrumentation/nav[1]/has-gs</property></not>
				<less-than-equals>
					<property>instrumentation/nav[1]/signal-quality-norm</property>
					<value>0.99</value>
				</less-than-equals>
			</or>
		</condition>
	</animation>
	
	<animation>
		<type>select</type>
		<object-name>GS.needle</object-name>
		<condition>
			<and>
				<equals>
					<property>instrumentation/hsi[1]/power-avail</property>
					<value>1</value>
				</equals>
				<greater-than-equals>
					<property>systems/electrical/outputs/nav[1]</property>
					<value>24</value>
				</greater-than-equals>
				<property>instrumentation/nav[1]/gs-in-range</property>
				<property>instrumentation/nav[1]/has-gs</property>
				<greater-than>
					<property>instrumentation/nav[1]/signal-quality-norm</property>
					<value>0.99</value>
				</greater-than>
				<not><property>instrumentation/hsi[1]/slaved-to-gps</property></not>
			</and>
		</condition>
	</animation>
	
	<animation>
		<type>select</type>
		<object-name>ToFlag</object-name>
		<condition>
			<property>instrumentation/nav[1]/to-flag</property>
		</condition>
	</animation>
	
	<animation>
		<type>select</type>
		<object-name>FromFlag</object-name>
		<condition>
			<property>instrumentation/nav[1]/from-flag</property>
		</condition>
	</animation>
	
	<animation>
		<type>rotate</type>
		<object-name>HSI.card</object-name>
		<object-name>HSI.crsneedle</object-name>
		<object-name>HSI.crsdeflection</object-name>
		<object-name>ToFlag</object-name>
		<object-name>FromFlag</object-name>
		<object-name>HSI.hdgbug</object-name>
		<property>instrumentation/hsi[1]/heading-linear</property>
		<axis>
			<x>1</x>
			<y>0</y>
			<z>0</z>
		</axis>
	</animation>
	
	<animation>
		<type>rotate</type>
		<object-name>HSI.crsneedle</object-name>
		<object-name>HSI.crsdeflection</object-name>
		<object-name>ToFlag</object-name>
		<object-name>FromFlag</object-name>
		<property>instrumentation/hsi[1]/course-linear</property>
		<axis>
			<x>-1</x>
			<y>0</y>
			<z>0</z>
		</axis>
	</animation>
	
	<animation>
		<type>translate</type>
		<object-name>HSI.crsdeflection</object-name>
		<property>instrumentation/hsi[1]/loc-deviation</property>
		<factor>0.00172</factor>
		<axis>
			<x>0</x>
			<y>1</y>
			<z>0</z>
		</axis>
	</animation>
	
	<animation>
		<type>rotate</type>
		<object-name>HSI.hdgbug</object-name>
		<property>instrumentation/hsi[1]/heading-bug-linear</property>
		<axis>
			<x>-1</x>
			<y>0</y>
			<z>0</z>
		</axis>
	</animation>
	
	<animation>
		<type>translate</type>
		<object-name>GS.needle</object-name>
		<property>instrumentation/hsi[1]/gs-deviation</property>
		<factor>0.00791</factor>
		<axis>
			<x>0</x>
			<y>0</y>
			<z>1</z>
		</axis>
	</animation>
	
	<animation>
		<type>select</type>
		<object-name>HeadingFlag</object-name>
		<condition>
			<not-equals>
				<property>instrumentation/hsi[1]/heading-avail</property>
				<value>1</value>
			</not-equals>
		</condition>
	</animation>
	
	<animation>
		<type>select</type>
		<object-name>HSI.nav</object-name>
		<condition>
			<property>instrumentation/hsi[1]/slaved-to-gps</property>
		</condition>
	</animation>
	
	<!-- Groundspeed -->
	<animation>
		<type>select</type>
		<object-name>GS.1</object-name>
		<object-name>GS.2</object-name>
		<object-name>GS.3</object-name>
		<condition>
			<and>
				<equals>
					<property>instrumentation/hsi[1]/power-avail</property>
					<value>1</value>
				</equals>
			</and>
		</condition>
	</animation>
	
	<animation>
		<type>select</type>
		<object-name>GS.dash</object-name>
		<condition>
			<and>
				<equals>
					<property>instrumentation/hsi[1]/power-avail</property>
					<value>1</value>
				</equals>
				<property>instrumentation/hsi[1]/unused</property>
			</and>
		</condition>
	</animation>
	
	<animation>
		<type>textranslate</type>
		<object-name>GS.1</object-name>
		<property>instrumentation/hsi[1]/indicated-groundspeed</property>
		<factor>0.001</factor>
		<step>100</step>
		<axis>
			<x>0</x>
			<y>1</y>
		</axis>
	</animation>
	
	<animation>
		<type>textranslate</type>
		<object-name>GS.2</object-name>
		<property>instrumentation/hsi[1]/indicated-groundspeed</property>
		<factor>0.01</factor>
		<step>10</step>
		<axis>
			<x>0</x>
			<y>1</y>
		</axis>
	</animation>
	
	<animation>
		<type>textranslate</type>
		<object-name>GS.3</object-name>
		<property>instrumentation/hsi[1]/indicated-groundspeed</property>
		<factor>0.1</factor>
		<step>1</step>
		<axis>
			<x>0</x>
			<y>1</y>
		</axis>
	</animation>
	
	<!-- Route Manager -->
	<animation>
		<type>select</type>
		<object-name>INS.1</object-name>
		<object-name>INS.2</object-name>
		<object-name>INS.3</object-name>
		<condition>
			<and>
				<equals>
					<property>instrumentation/hsi[1]/power-avail</property>
					<value>1</value>
				</equals>
				<property>instrumentation/hsi[1]/dist-available</property>
			</and>
		</condition>
	</animation>
	
	<animation>
		<type>select</type>
		<object-name>INS.dash</object-name>
		<condition>
			<and>
				<equals>
					<property>instrumentation/hsi[1]/power-avail</property>
					<value>1</value>
				</equals>
				<not><property>instrumentation/hsi[1]/dist-available</property></not>
			</and>
		</condition>
	</animation>
	
	<animation>
		<type>textranslate</type>
		<object-name>INS.1</object-name>
		<property>instrumentation/hsi[1]/indicated-distance-nm</property>
		<factor>0.001</factor>
		<step>100</step>
		<axis>
			<x>0</x>
			<y>1</y>
		</axis>
	</animation>
	
	<animation>
		<type>textranslate</type>
		<object-name>INS.2</object-name>
		<property>instrumentation/hsi[1]/indicated-distance-nm</property>
		<factor>0.01</factor>
		<step>10</step>
		<axis>
			<x>0</x>
			<y>1</y>
		</axis>
	</animation>
	
	<animation>
		<type>textranslate</type>
		<object-name>INS.3</object-name>
		<property>instrumentation/hsi[1]/indicated-distance-nm</property>
		<factor>0.1</factor>
		<step>1</step>
		<axis>
			<x>0</x>
			<y>1</y>
		</axis>
	</animation>

</PropertyList>
