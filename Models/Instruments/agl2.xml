<PropertyList>
	
	<path>agl.ac</path>
	
	<animation>
		<type>scale</type>
		<x-offset>0.95</x-offset>
		<y-offset>0.95</y-offset>
		<z-offset>0.95</z-offset>
	</animation>

	<animation>
		<type>material</type>
		<object-name>LightingGroup</object-name>
		<emission>
			<red>1.0</red>
			<green>0.6</green>
			<blue>0.3</blue>
			<factor-prop>controls/lighting/fo-panel-norm</factor-prop>
		</emission>
	</animation>
	
	<animation>
		<type>rotate</type>
		<object-name>Needle</object-name>
		<property>instrumentation/agl[1]/altitude-ft</property>
		<interpolation>
			<entry><ind>   0</ind><dep>  0</dep></entry>
			<entry><ind> 500</ind><dep>180</dep></entry>
			<entry><ind>1000</ind><dep>237</dep></entry>
			<entry><ind>1500</ind><dep>273</dep></entry>
			<entry><ind>2000</ind><dep>297</dep></entry>
			<entry><ind>2500</ind><dep>315</dep></entry>
			<entry><ind>3200</ind><dep>341</dep></entry>
		</interpolation>
		<axis>
			<x>-1</x>
			<y>0</y>
			<z>0</z>
		</axis>
	</animation>
	
	<animation>
		<type>rotate</type>
		<object-name>Bug</object-name>
		<property>instrumentation/agl[1]/minimums</property>
		<interpolation>
			<entry><ind>   0</ind><dep>  0</dep></entry>
			<entry><ind> 500</ind><dep>180</dep></entry>
			<entry><ind>1000</ind><dep>237</dep></entry>
			<entry><ind>1500</ind><dep>273</dep></entry>
			<entry><ind>2000</ind><dep>297</dep></entry>
			<entry><ind>2500</ind><dep>315</dep></entry>
		</interpolation>
		<axis>
			<x>-1</x>
			<y>0</y>
			<z>0</z>
		</axis>
	</animation>
	
	<animation>
		<type>material</type>
		<object-name>Alert</object-name>
		<emission>
			<red>1.0</red>
			<green>1.0</green>
			<blue>0</blue>
			<factor-prop>instrumentation/agl[1]/minimums-light</factor-prop>
		</emission>
	</animation>
	
	<animation>
		<type>select</type>
		<object-name>Flag</object-name>
		<condition>
			<not-equals>
				<property>instrumentation/agl[1]/power-avail</property>
				<value>1</value>
			</not-equals>
		</condition>
	</animation>
	
	<animation>
		<type>knob</type>
		<object-name>BugKnob</object-name>
		<property>controls/cockpit/mins-rotate[1]</property>
		<factor>11.25</factor>
		<center>
			<x-m>0</x-m>
			<y-m>0.03169</y-m>
			<z-m>-0.03154</z-m>
		</center>
		<axis>
			<x>-1</x>
			<y>0</y>
			<z>0</z>
		</axis>
		<action>
			<binding>
				<command>property-adjust</command>
				<property>controls/switches/minimums</property>
				<factor>10</factor>
				<min>0</min>
				<max>2500</max>
				<wrap>false</wrap>
			</binding>
			<binding>
				<command>property-adjust</command>
				<property>controls/cockpit/mins-rotate[1]</property>
				<factor>1</factor>
				<min>0</min>
				<max>100000</max>
				<wrap>true</wrap>
			</binding>
		</action>
	</animation>

</PropertyList>
