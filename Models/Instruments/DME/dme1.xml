<PropertyList>
	
	<path>dme.ac</path>
	
	<effect>
		<inherits-from>Effects/model-transparent</inherits-from>
		<object-name>Labels</object-name>
	</effect>
	
	<animation>
		<name>Display</name>
		<object-name>DigitsDME1</object-name>
		<object-name>DigitsDME1Blank</object-name>
		<object-name>DigitsDME2</object-name>
		<object-name>DigitsDME2Blank</object-name>
		<object-name>DigitsTest</object-name>
	</animation>
	<animation>
		<type>select</type>
		<object-name>Display</object-name>
		<condition>
			<greater-than-equals>
				<property>systems/electrical/bus/l-emer-dc</property>
				<value>24</value>
			</greater-than-equals>
		</condition>
	</animation>
	
	<text>
		<name>DigitsDME1</name>
		<offsets>
			<x-m>0.0031</x-m>
			<y-m>-0.00819</y-m>
			<z-m>-0.004</z-m>
		</offsets>
		<alignment>right-bottom</alignment>
		<axis-alignment>yz-plane</axis-alignment>
		<type>number-value</type>
		<format>%05.1f</format>
		<property>instrumentation/dme[0]/distance-nm</property>
		<font>Std7SegCustom.ttf</font>
		<draw-text>true</draw-text>
		<draw-alignment>false</draw-alignment>
		<draw-boundingbox>false</draw-boundingbox>
		<character-size>0.008</character-size>
		<font-resolution>
			<width>30</width>
			<height>32</height>
		</font-resolution>
	</text>
	<text>
		<name>DigitsDME1Blank</name>
		<offsets>
			<x-m>0.0031</x-m>
			<y-m>-0.00819</y-m>
			<z-m>-0.004</z-m>
		</offsets>
		<alignment>right-bottom</alignment>
		<axis-alignment>yz-plane</axis-alignment>
		<type>literal</type>
		<text>---.-</text>
		<font>Std7SegCustom.ttf</font>
		<draw-text>true</draw-text>
		<draw-alignment>false</draw-alignment>
		<draw-boundingbox>false</draw-boundingbox>
		<character-size>0.008</character-size>
		<font-resolution>
			<width>30</width>
			<height>32</height>
		</font-resolution>
	</text>
	<text>
		<name>DigitsTest</name>
		<offsets>
			<x-m>0.0031</x-m>
			<y-m>-0.00819</y-m>
			<z-m>-0.004</z-m>
		</offsets>
		<alignment>right-bottom</alignment>
		<axis-alignment>yz-plane</axis-alignment>
		<type>literal</type>
		<text>888.8</text>
		<font>Std7SegCustom.ttf</font>
		<draw-text>true</draw-text>
		<draw-alignment>false</draw-alignment>
		<draw-boundingbox>false</draw-boundingbox>
		<character-size>0.008</character-size>
		<font-resolution>
			<width>30</width>
			<height>32</height>
		</font-resolution>
	</text>
	
	<text>
		<name>DigitsDME2</name>
		<offsets>
			<x-m>0.0031</x-m>
			<y-m>0.03203</y-m>
			<z-m>-0.004</z-m>
		</offsets>
		<alignment>right-bottom</alignment>
		<axis-alignment>yz-plane</axis-alignment>
		<type>number-value</type>
		<format>%05.1f</format>
		<property>instrumentation/dme[1]/distance-nm</property>
		<font>Std7SegCustom.ttf</font>
		<draw-text>true</draw-text>
		<draw-alignment>false</draw-alignment>
		<draw-boundingbox>false</draw-boundingbox>
		<character-size>0.008</character-size>
		<font-resolution>
			<width>30</width>
			<height>32</height>
		</font-resolution>
	</text>
	<text>
		<name>DigitsDME2Blank</name>
		<offsets>
			<x-m>0.0031</x-m>
			<y-m>0.03203</y-m>
			<z-m>-0.004</z-m>
		</offsets>
		<alignment>right-bottom</alignment>
		<axis-alignment>yz-plane</axis-alignment>
		<type>literal</type>
		<text>---.-</text>
		<font>Std7SegCustom.ttf</font>
		<draw-text>true</draw-text>
		<draw-alignment>false</draw-alignment>
		<draw-boundingbox>false</draw-boundingbox>
		<character-size>0.008</character-size>
		<font-resolution>
			<width>30</width>
			<height>32</height>
		</font-resolution>
	</text>
	<text>
		<name>DigitsTest</name>
		<offsets>
			<x-m>0.0031</x-m>
			<y-m>0.03203</y-m>
			<z-m>-0.004</z-m>
		</offsets>
		<alignment>right-bottom</alignment>
		<axis-alignment>yz-plane</axis-alignment>
		<type>literal</type>
		<text>888.8</text>
		<font>Std7SegCustom.ttf</font>
		<draw-text>true</draw-text>
		<draw-alignment>false</draw-alignment>
		<draw-boundingbox>false</draw-boundingbox>
		<character-size>0.008</character-size>
		<font-resolution>
			<width>30</width>
			<height>32</height>
		</font-resolution>
	</text>
	
	<animation>
		<type>select</type>
		<object-name>DigitsDME1</object-name>
		<condition>
			<and>
				<property>instrumentation/dme[0]/available</property>
				<not><property>controls/switches/annun-test</property></not>
			</and>
		</condition>
	</animation>
	<animation>
		<type>select</type>
		<object-name>DigitsDME2</object-name>
		<condition>
			<and>
				<property>instrumentation/dme[1]/available</property>
				<not><property>controls/switches/annun-test</property></not>
			</and>
		</condition>
	</animation>
	<animation>
		<type>select</type>
		<object-name>DigitsDME1Blank</object-name>
		<condition>
			<and>
				<not><property>instrumentation/dme[0]/available</property></not>
				<not><property>controls/switches/annun-test</property></not>
			</and>
		</condition>
	</animation>
	<animation>
		<type>select</type>
		<object-name>DigitsDME2Blank</object-name>
		<condition>
			<and>
				<not><property>instrumentation/dme[1]/available</property></not>
				<not><property>controls/switches/annun-test</property></not>
			</and>
		</condition>
	</animation>
	<animation>
		<type>select</type>
		<object-name>DigitsTest</object-name>
		<condition>
			<property>controls/switches/annun-test</property>
		</condition>
	</animation>
	
	<animation>
		<type>material</type>
		<object-name>Display</object-name>
		<diffuse>
			<red>1</red>
			<green>0.6</green>
			<blue>0</blue>
		</diffuse>
		<ambient>
			<red>0</red>
			<green>0</green>
			<blue>0</blue>
		</ambient>
		<specular>
			<red>0</red>
			<green>0</green>
			<blue>0</blue>
		</specular>
		<emission>
			<red>1</red>
			<green>0.6</green>
			<blue>0</blue>
		</emission>
	</animation>

</PropertyList>
