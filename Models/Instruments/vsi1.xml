<PropertyList>
	
	<path>vsi.ac</path>
	
	<animation>
		<type>scale</type>
		<x-offset>0.95</x-offset>
		<y-offset>0.95</y-offset>
		<z-offset>0.95</z-offset>
	</animation>
	
	<animation>
		<type>material</type>
		<object-name>Face</object-name>
		<object-name>Flag</object-name>
		<object-name>Needle</object-name>
		<emission>
			<red>1.0</red>
			<green>0.6</green>
			<blue>0.3</blue>
			<factor-prop>controls/lighting/capt-panel-norm</factor-prop>
		</emission>
	</animation>
	
	<animation>
		<type>rotate</type>
		<object-name>Needle</object-name>
		<property>instrumentation/vertical-speed-indicator[0]/vs-fpm</property>
		<interpolation>
			<entry><ind>-6000</ind><dep>-170</dep></entry>
			<entry><ind>-4000</ind><dep>-130</dep></entry>
			<entry><ind>-2000</ind><dep> -90</dep></entry>
			<entry><ind>-1000</ind><dep> -55</dep></entry>
			<entry><ind>  -10</ind><dep>   0</dep></entry>
			<entry><ind>   10</ind><dep>   0</dep></entry>
			<entry><ind> 1000</ind><dep>  55</dep></entry>
			<entry><ind> 2000</ind><dep>  90</dep></entry>
			<entry><ind> 4000</ind><dep> 130</dep></entry>
			<entry><ind> 6000</ind><dep> 170</dep></entry>
		</interpolation>
		<axis>
			<x>-1</x>
			<y>0</y>
			<z>0</z>
		</axis>
	</animation>
	
	<animation>
		<type>select</type>
		<object-name>Flag</object-name>
		<condition>
			<not-equals>
				<property>instrumentation/vertical-speed-indicator[0]/power-avail</property>
				<value>1</value>
			</not-equals>
		</condition>
	</animation>

</PropertyList>
