<?xml version="1.0" encoding="UTF-8" ?>

<!-- Instrument based off ALT from Ryan Miller's DC-10 -->
<!-- Copyright (c) 2024 Josh Davidson (Octal450) -->

<PropertyList>
	
	<path>alt.ac</path>
	
	<animation>
		<type>material</type>
		<object-name>Face</object-name> 
		<object-name>altdig1</object-name>
		<object-name>altdig2</object-name>
		<object-name>altdig20s</object-name>
		<object-name>altdig3</object-name>
		<object-name>inhg1</object-name>
		<object-name>inhg2</object-name>
		<object-name>inhg3</object-name>
		<object-name>inhg4</object-name>
		<object-name>mb1</object-name>
		<object-name>mb2</object-name>
		<object-name>mb3</object-name>
		<object-name>mb4</object-name>
		<object-name>needle</object-name>
		<object-name>AltSet</object-name>
		<emission>
			<red>0.6</red>
			<green>0.45</green>
			<blue>0.3</blue>
			<factor-prop>controls/lighting/main-panel-norm</factor-prop>
		</emission>
	</animation>
	
	<!-- Needle -->
	<animation>
		<type>rotate</type>
		<object-name>needle</object-name>
		<property>instrumentation/altimeter/indicated-altitude-ft</property>
		<factor>0.36</factor>
		<axis>
			<x>-1</x>
			<y>0</y>
			<z>0</z>
		</axis>
	</animation>
	
	<animation>
		<type>rotate</type>
		<object-name>AltSet</object-name>
		<property>instrumentation/altimeter/altitude-bug-lag</property>
		<factor>0.36</factor>
		<axis>
			<x>-1</x>
			<y>0</y>
			<z>0</z>
		</axis>
	</animation>
	
	<!-- Altimeter digits -->
	<animation>
		<type>textranslate</type>
		<object-name>altdig1</object-name>
		<property>instrumentation/altimeter/indicated-altitude-ft</property>
		<factor>0.00001</factor>
		<step>10000</step>
		<scroll>20</scroll>
		<axis>
			<x>0</x>
			<y>1</y>
		</axis>
	</animation>
	<animation>
		<type>textranslate</type>
		<object-name>altdig2</object-name>
		<property>instrumentation/altimeter/indicated-altitude-ft</property>
		<factor>0.0001</factor>
		<step>1000</step>
		<scroll>20</scroll>
		<axis>
			<x>0</x>
			<y>1</y>
		</axis>
	</animation>
	<animation>
		<type>textranslate</type>
		<object-name>altdig3</object-name>
		<property>instrumentation/altimeter/indicated-altitude-ft</property>
		<factor>0.001</factor>
		<step>100</step>
		<scroll>20</scroll>
		<axis>
			<x>0</x>
			<y>1</y>
		</axis>
	</animation>
	<animation>
		<type>textranslate</type>
		<object-name>altdig20s</object-name>
		<property>instrumentation/altimeter/indicated-altitude-ft</property>
		<factor>0.01</factor>
		<axis>
			<x>0</x>
			<y>1</y>
		</axis>
	</animation>
	
	<!-- INHG digits -->
	<animation>
		<type>textranslate</type>
		<object-name>inhg4</object-name>
		<property>instrumentation/altimeter/setting-inhg</property>
		<factor>10</factor>
		<step>0.01</step>
		<axis>
			<x>0</x>
			<y>1</y>
		</axis>
	</animation>
	<animation>
		<type>textranslate</type>
		<object-name>inhg3</object-name>
		<property>instrumentation/altimeter/setting-inhg</property>
		<factor>1</factor>
		<step>0.1</step>
		<axis>
			<x>0</x>
			<y>1</y>
		</axis>
	</animation>
	<animation>
		<type>textranslate</type>
		<object-name>inhg2</object-name>
		<property>instrumentation/altimeter/setting-inhg</property>
		<factor>0.1</factor>
		<step>1</step>
		<axis>
			<x>0</x>
			<y>1</y>
		</axis>
	</animation>
	<animation>
		<type>textranslate</type>
		<object-name>inhg1</object-name>
		<property>instrumentation/altimeter/setting-inhg</property>
		<factor>0.01</factor>
		<step>10</step>
		<axis>
			<x>0</x>
			<y>1</y>
		</axis>
	</animation>
	
	<!-- MB digits -->
	<animation>
		<type>textranslate</type>
		<object-name>mb4</object-name>
		<property>instrumentation/altimeter/setting-hpa</property>
		<factor>0.1</factor>
		<step>1</step>
		<axis>
			<x>0</x>
			<y>1</y>
		</axis>
	</animation>
	<animation>
		<type>textranslate</type>
		<object-name>mb3</object-name>
		<property>instrumentation/altimeter/setting-hpa</property>
		<factor>0.01</factor>
		<step>10</step>
		<axis>
			<x>0</x>
			<y>1</y>
		</axis>
	</animation>
	<animation>
		<type>textranslate</type>
		<object-name>mb2</object-name>
		<property>instrumentation/altimeter/setting-hpa</property>
		<factor>0.001</factor>
		<step>100</step>
		<axis>
			<x>0</x>
			<y>1</y>
		</axis>
	</animation>
	<animation>
		<type>textranslate</type>
		<object-name>mb1</object-name>
		<property>instrumentation/altimeter/setting-hpa</property>
		<factor>0.0001</factor>
		<step>1000</step>
		<axis>
			<x>0</x>
			<y>1</y>
		</axis>
	</animation>
	
	<!-- Barometer pressure knob -->
	<animation>
		<type>pick</type>
		<object-name>baroknob</object-name>
		<action>
			<button>0</button>
			<button>3</button>
			<repeatable>true</repeatable>
			<binding>
				<command>property-adjust</command>
				<property>instrumentation/altimeter/setting-inhg</property>
				<step>0.01</step>
				<max>35</max>
			</binding>	
		</action>
		<action>
			<button>1</button>
			<button>4</button>
			<repeatable>true</repeatable>
			<binding>
				<command>property-adjust</command>
				<property>instrumentation/altimeter/setting-inhg</property>
				<step>-0.01</step>
				<min>25</min>
			</binding>		
		</action>
	</animation>
	<animation>
		<type>rotate</type>
		<object-name>baroknob</object-name>
		<property>instrumentation/altimeter/setting-inhg</property>
		<factor>1600</factor>
		<axis>
			<x>-1</x>
			<y>0</y>
			<z>0</z>
		</axis>
		<center>
			<x-m>0</x-m>
			<y-m>-0.02992</y-m>
			<z-m>-0.02884</z-m>
		</center>
	</animation>
	
	<!-- Altitude bug knob -->
	<animation>
		<type>pick</type>
		<object-name>bugknob</object-name>
		<action>
			<button>0</button>
			<button>3</button>
			<repeatable>true</repeatable>
			<binding>
				<command>property-adjust</command>
				<property>instrumentation/altimeter/altitude-bug</property>
				<step>50</step>
			</binding>	
		</action>
		<action>
			<button>1</button>
			<button>4</button>
			<repeatable>true</repeatable>
			<binding>
				<command>property-adjust</command>
				<property>instrumentation/altimeter/altitude-bug</property>
				<step>-50</step>
			</binding>		
		</action>
	</animation>
	<animation>
		<type>rotate</type>
		<object-name>bugknob</object-name>
		<property>instrumentation/altimeter/altitude-bug</property>
		<factor>0.36</factor>
		<axis>
			<x>-1</x>
			<y>0</y>
			<z>0</z>
		</axis>
		<center>
			<x-m>0</x-m>
			<y-m>0.03075</y-m>
			<z-m>-0.02884</z-m>
		</center>
	</animation>

</PropertyList>
