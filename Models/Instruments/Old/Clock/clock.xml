<?xml version="1.0" encoding="UTF-8" ?>

<!-- Instrument based off Clock from Ryan Miller's DC-10 -->
<!-- Copyright (c) 2024 Josh Davidson (Octal450) -->

<PropertyList>
	
	<path>clock.ac</path>
	
	<animation>
		<type>material</type>
		<object-name>Face</object-name>
		<object-name>ElapsDigits</object-name>
		<object-name>GMTDigits</object-name>
		<object-name>LocalDigits</object-name>
		<object-name>Needle1</object-name>
		<object-name>Needle2GMT</object-name>
		<object-name>Needle2Local</object-name>
		<emission>
			<red>0.6</red>
			<green>0.45</green>
			<blue>0.3</blue>
			<factor-prop>controls/lighting/main-panel-norm</factor-prop>
		</emission>
	</animation>
	
	<animation>
		<type>rotate</type>
		<object-name>Needle1</object-name>
		<property>instrumentation/clock/indicated-min</property>
		<factor>6</factor>
		<axis>
			<x>-1</x>
			<y>0</y>
			<z>0</z>
		</axis>
	</animation>
	<animation>
		<type>rotate</type>
		<object-name>Needle2GMT</object-name>
		<property>instrumentation/clock/indicated-hour</property>
		<factor>30</factor>
		<axis>
			<x>-1</x>
			<y>0</y>
			<z>0</z>
		</axis>
	</animation>
	<animation>
		<type>select</type>
		<object-name>Needle2GMT</object-name>
		<condition>
			<equals>
				<property>instrumentation/clock/indicated-timezone</property>
				<value>gmt</value>
			</equals>
		</condition>
	</animation>
	<animation>
		<type>rotate</type>
		<object-name>Needle2Local</object-name>
		<property>instrumentation/clock/local-hour</property>
		<factor>30</factor>
		<axis>
			<x>-1</x>
			<y>0</y>
			<z>0</z>
		</axis>
	</animation>
	<animation>
		<type>select</type>
		<object-name>Needle2Local</object-name>
		<condition>
			<equals>
				<property>instrumentation/clock/indicated-timezone</property>
				<value>local</value>
			</equals>
		</condition>
	</animation>
	
	<animation>
		<type>textranslate</type>
		<object-name>GMT1</object-name>
		<property>instrumentation/clock/indicated-hour</property>
		<factor>0.01</factor>
		<step>10</step>
		<axis>
			<x>0</x>
			<y>1</y>
		</axis>
	</animation>
	<animation>
		<type>textranslate</type>
		<object-name>GMT2</object-name>
		<property>instrumentation/clock/indicated-hour</property>
		<factor>0.1</factor>
		<step>1</step>
		<axis>
			<x>0</x>
			<y>1</y>
		</axis>
	</animation>
	<animation>
		<type>textranslate</type>
		<object-name>GMT3</object-name>
		<property>instrumentation/clock/indicated-min</property>
		<factor>0.01</factor>
		<step>10</step>
		<axis>
			<x>0</x>
			<y>1</y>
		</axis>
	</animation>
	<animation>
		<type>textranslate</type>
		<object-name>GMT4</object-name>
		<property>instrumentation/clock/indicated-min</property>
		<factor>0.1</factor>
		<step>1</step>
		<axis>
			<x>0</x>
			<y>1</y>
		</axis>
	</animation>
	
	<animation>
		<type>select</type>
		<object-name>GMT1</object-name>
		<object-name>GMT2</object-name>
		<condition>
			<equals>
				<property>instrumentation/clock/indicated-timezone</property>
				<value>gmt</value>
			</equals>
		</condition>
	</animation>
	<animation>
		<type>select</type>
		<object-name>Local1</object-name>
		<object-name>Local2</object-name>
		<condition>
			<equals>
				<property>instrumentation/clock/indicated-timezone</property>
				<value>local</value>
			</equals>
		</condition>
	</animation>
	<animation>
		<type>textranslate</type>
		<object-name>Local1</object-name>
		<property>instrumentation/clock/local-hour</property>
		<factor>0.01</factor>
		<step>10</step>
		<axis>
			<x>0</x>
			<y>1</y>
		</axis>
	</animation>
	<animation>
		<type>textranslate</type>
		<object-name>Local2</object-name>
		<property>instrumentation/clock/local-hour</property>
		<factor>0.1</factor>
		<step>1</step>
		<axis>
			<x>0</x>
			<y>1</y>
		</axis>
	</animation>
	
	<animation>
		<type>textranslate</type>
		<object-name>Elaps1</object-name>
		<property>instrumentation/chronometer/elapsed-sec</property>
		<factor>0.000002778</factor>
		<step>36000</step>
		<axis>
			<x>0</x>
			<y>1</y>
		</axis>
	</animation>
	<animation>
		<type>textranslate</type>
		<object-name>Elaps2</object-name>
		<property>instrumentation/chronometer/elapsed-sec</property>
		<factor>0.000027778</factor>
		<step>3600</step>
		<axis>
			<x>0</x>
			<y>1</y>
		</axis>
	</animation>
	<animation>
		<type>textranslate</type>
		<object-name>Elaps3</object-name>
		<object-name>Elaps5</object-name>
		<property>instrumentation/chronometer/elapsed-sec</property>
		<factor>0.000277778</factor>
		<step>600</step>
		<axis>
			<x>0</x>
			<y>1</y>
		</axis>
	</animation>
	<animation>
		<type>textranslate</type>
		<object-name>Elaps4</object-name>
		<object-name>Elaps6</object-name>
		<property>instrumentation/chronometer/elapsed-sec</property>
		<factor>0.001666667</factor>
		<step>60</step>
		<axis>
			<x>0</x>
			<y>1</y>
		</axis>
	</animation>
	<animation>
		<type>textranslate</type>
		<object-name>Elaps7</object-name>
		<property>instrumentation/chronometer/elapsed-sec</property>
		<factor>0.016666667</factor>
		<step>10</step>
		<axis>
			<x>0</x>
			<y>1</y>
		</axis>
	</animation>
	<animation>
		<type>textranslate</type>
		<object-name>Elaps8</object-name>
		<property>instrumentation/chronometer/elapsed-sec</property>
		<factor>0.1</factor>
		<step>1</step>
		<axis>
			<x>0</x>
			<y>1</y>
		</axis>
	</animation>
	<animation>
		<type>select</type>
		<object-name>Elaps1</object-name>
		<object-name>Elaps2</object-name>
		<object-name>Elaps3</object-name>
		<object-name>Elaps4</object-name>
		<condition>
			<greater-than-equals>
				<property>instrumentation/chronometer/elapsed-sec</property>
				<value>3600</value>
			</greater-than-equals>
		</condition>
	</animation>
	<animation>
		<type>select</type>
		<object-name>Elaps5</object-name>
		<object-name>Elaps6</object-name>
		<object-name>Elaps7</object-name>
		<object-name>Elaps8</object-name>
		<condition>
			<less-than>
				<property>instrumentation/chronometer/elapsed-sec</property>
				<value>3600</value>
			</less-than>
		</condition>
	</animation>
	
	<animation>
		<type>pick</type>
		<object-name>GMTKnob</object-name>
		<action>
			<button>0</button>
			<repeatable>false</repeatable>
			<binding>
				<command>property-assign</command>
				<property>instrumentation/clock/indicated-timezone</property>
				<value>gmt</value>
			</binding>
		</action>
	</animation>
	<animation>
		<type>pick</type>
		<object-name>LocalKnob</object-name>
		<action>
			<button>0</button>
			<repeatable>false</repeatable>
			<binding>
				<command>property-assign</command>
				<property>instrumentation/clock/indicated-timezone</property>
				<value>local</value>
			</binding>
		</action>
	</animation>

</PropertyList>
