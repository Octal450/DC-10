<?xml version="1.0" encoding="UTF-8" ?>

<!-- Instrument based off TAT-SAT from Ryan Miller's DC-10 -->
<!-- Copyright (c) 2024 Josh Davidson (Octal450) -->

<PropertyList>
	
	<path>tas-sat.ac</path>
	
	<animation>
		<type>material</type>
		<object-name>SAT-</object-name>
		<object-name>SAT-1</object-name>
		<object-name>SAT-10</object-name>
		<object-name>SAT1</object-name>
		<object-name>SAT10</object-name>
		<object-name>TAS1</object-name>
		<object-name>TAS10</object-name>
		<object-name>TAS100</object-name>
		<emission>
			<red>0.6</red>
			<green>0.45</green>
			<blue>0.3</blue>
			<factor-prop>controls/lighting/main-panel-norm</factor-prop>
		</emission>
	</animation>
	
	<animation>
		<type>textranslate</type>
		<object-name>TAS100</object-name>
		<property>instrumentation/airspeed-indicator[0]/true-speed-kt</property>
		<factor>0.001</factor>
		<step>100</step>
		<scroll>0.0001</scroll>
		<axis>
			<x>0</x>
			<y>1</y>
		</axis>
	</animation>
	<animation>
		<type>textranslate</type>
		<object-name>TAS10</object-name>
		<property>instrumentation/airspeed-indicator[0]/true-speed-kt</property>
		<factor>0.01</factor>
		<step>10</step>
		<scroll>0.0001</scroll>
		<axis>
			<x>0</x>
			<y>1</y>
		</axis>
	</animation>
	<animation>
		<type>textranslate</type>
		<object-name>TAS1</object-name>
		<property>instrumentation/airspeed-indicator[0]/true-speed-kt</property>
		<factor>0.1</factor>
		<step>1</step>
		<scroll>0.0001</scroll>
		<axis>
			<x>0</x>
			<y>1</y>
		</axis>
	</animation>
	
	<animation>
		<type>textranslate</type>
		<object-name>SAT10</object-name>
		<property>environment/temperature-degc</property>
		<factor>0.01</factor>
		<step>10</step>
		<scroll>0.001</scroll>
		<axis>
			<x>0</x>
			<y>1</y>
		</axis>
	</animation>
	<animation>
		<type>textranslate</type>
		<object-name>SAT1</object-name>
		<property>environment/temperature-degc</property>
		<factor>0.1</factor>
		<step>1</step>
		<scroll>0.001</scroll>
		<axis>
			<x>0</x>
			<y>1</y>
		</axis>
	</animation>
	<animation>
		<type>select</type>
		<object-name>SAT10</object-name>
		<object-name>SAT1</object-name>
		<condition>
			<greater-than-equals>
				<property>environment/temperature-degc</property>
				<value>0</value>
			</greater-than-equals>
		</condition>
	</animation>
	<animation>
		<type>textranslate</type>
		<object-name>SAT-10</object-name>
		<property>environment/temperature-degc</property>
		<factor>0.01</factor>
		<step>10</step>
		<scroll>0.001</scroll>
		<axis>
			<x>0</x>
			<y>-1</y>
		</axis>
	</animation>
	<animation>
		<type>textranslate</type>
		<object-name>SAT-1</object-name>
		<property>environment/temperature-degc</property>
		<factor>0.1</factor>
		<step>1</step>
		<scroll>0.001</scroll>
		<axis>
			<x>0</x>
			<y>-1</y>
		</axis>
	</animation>
	<animation>
		<type>select</type>
		<object-name>SAT-10</object-name>
		<object-name>SAT-1</object-name>
		<condition>
			<less-than>
				<property>environment/temperature-degc</property>
				<value>0</value>
			</less-than>
		</condition>
	</animation>
	<animation>
		<type>textranslate</type>
		<object-name>SAT-</object-name>
		<property>environment/temperature-degc</property>
		<interpolation>
			<entry><ind> 0.000000000</ind><dep>0.1</dep></entry>
			<entry><ind>-0.000000001</ind><dep>0.0</dep></entry>
		</interpolation>
		<axis>
			<x>0</x>
			<y>1</y>
		</axis>
	</animation>

</PropertyList>
