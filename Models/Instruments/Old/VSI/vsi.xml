<PropertyList>
	
	<path>vsi.ac</path>

	<animation>
		<type>material</type>
		<object-name>Face</object-name>
		<object-name>Needle</object-name>
		<emission>
			<red>0.6</red>
			<green>0.45</green>
			<blue>0.3</blue>
			<factor-prop>controls/lighting/main-panel-norm</factor-prop>
		</emission>
	</animation>

	<animation>
		<type>rotate</type>
		<object-name>Needle</object-name>
		<property>instrumentation/gps/indicated-vertical-speed</property>
		<interpolation>
			<entry><ind>-6000</ind><dep> 169.5</dep></entry>
			<entry><ind>-4000</ind><dep> 134.5</dep></entry>
			<entry><ind>-2000</ind><dep>  90.0</dep></entry>
			<entry><ind>-1000</ind><dep>  45.0</dep></entry>
			<entry><ind> -500</ind><dep>  22.5</dep></entry>
			<entry><ind>    0</ind><dep>   0.5</dep></entry>
			<entry><ind>  500</ind><dep> -22.5</dep></entry>
			<entry><ind> 1000</ind><dep> -44.5</dep></entry>
			<entry><ind> 2000</ind><dep> -90.0</dep></entry>
			<entry><ind> 4000</ind><dep>-135.5</dep></entry>
			<entry><ind> 6000</ind><dep>-170.5</dep></entry>
		</interpolation>
		<axis>
			<x>1</x>
			<y>0</y>
			<z>0</z>
		</axis>
	</animation>

</PropertyList>
