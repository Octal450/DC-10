<PropertyList>
	
	<path>res/pedals.ac</path>
	
	<animation>
		<type>translate</type>
		<object-name>pedals.left</object-name>
		<property>controls/cockpit/rudder-pedal</property>
		<factor>0.08</factor>
		<axis>
			<x>1.0</x>
			<y>0.0</y>
			<z>0.0</z>
		</axis>
	</animation>
	
	<animation>
		<type>rotate</type>
		<object-name>pedals.left</object-name>
		<property>controls/cockpit/brake-pedal-left</property>
		<factor>-40</factor>
		<center>
			<x-m>-27.6379</x-m>
			<y-m>0</y-m>
			<z-m>6.45998</z-m>
		</center>
		<axis>
			<x>0</x> 
			<y>1</y> 
			<z>0</z> 
		</axis>
	</animation>

	<animation>
		<type>translate</type>
		<object-name>pedals.right</object-name>
		<property>controls/cockpit/rudder-pedal</property>
		<factor>-0.08</factor>
		<axis>
			<x>1.0</x>
			<y>0.0</y>
			<z>0.0</z>
		</axis>
	</animation>
	
	<animation>
		<type>rotate</type>
		<object-name>pedals.right</object-name>
		<property>controls/cockpit/brake-pedal-right</property>
		<factor>-40</factor>
		<center>
			<x-m>-27.6379</x-m>
			<y-m>0</y-m>
			<z-m>6.45998</z-m>
		</center>
		<axis>
			<x>0</x> 
			<y>1</y> 
			<z>0</z> 
		</axis>
	</animation>

</PropertyList>
